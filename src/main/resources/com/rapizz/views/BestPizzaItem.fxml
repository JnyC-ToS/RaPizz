<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox fx:id="root" styleClass="best-pizza-item" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
	<StackPane alignment="BOTTOM_RIGHT" prefHeight="350.0" prefWidth="350.0">
		<ImageView fx:id="image" fitHeight="350.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true">
			<clip>
				<Rectangle arcHeight="40.0" arcWidth="40.0" height="350.0" width="350.0" />
			</clip>
		</ImageView>
		<Button mnemonicParsing="false" onAction="#onInfoButtonClicked" prefHeight="50.0" prefWidth="75.0" styleClass="info-button" text="+" />
	</StackPane>
	<HBox alignment="BOTTOM_LEFT" spacing="25.0">
		<Label fx:id="name" styleClass="best-pizza-name" />
		<Label fx:id="price" styleClass="best-pizza-price" />
        <VBox.margin>
           <Insets top="15.0" right="15.0" left="15.0" />
        </VBox.margin>
	</HBox>
	<Label fx:id="rank" styleClass="best-pizza-rank">
		<VBox.margin>
			<Insets right="15.0" bottom="15.0" left="15.0" />
		</VBox.margin>
	</Label>
</VBox>
