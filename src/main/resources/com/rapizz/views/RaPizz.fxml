<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@fx-reset.css,@style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rapizz.controllers.Controller">
   <top>
      <BorderPane prefHeight="100.0" BorderPane.alignment="CENTER">
         <left>
            <ImageView fitHeight="70.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <Image url="@/images/logo-text.png" />
            </ImageView>
         </left>
         <right>
            <HBox alignment="CENTER" spacing="35.0" BorderPane.alignment="CENTER">
               <Button mnemonicParsing="false" onAction="#onHomeButtonClicked" prefHeight="45.0" prefWidth="45.0" styleClass="icon-button">
                  <graphic>
                     <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@/images/icons/home.png" />
                     </ImageView>
                  </graphic>
                  <tooltip>
                     <Tooltip text="Accueil" />
                  </tooltip>
               </Button>
               <Button mnemonicParsing="false" onAction="#onStatsButtonClicked" prefHeight="45.0" prefWidth="45.0" styleClass="icon-button">
                  <graphic>
                     <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@/images/icons/stats.png" />
                     </ImageView>
                  </graphic>
                  <tooltip>
                     <Tooltip text="Statistiques" />
                  </tooltip>
               </Button>
               <Button mnemonicParsing="false" onAction="#onProfileButtonClicked" prefHeight="45.0" prefWidth="45.0" styleClass="icon-button">
                  <graphic>
                     <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@/images/icons/profile.png" />
                     </ImageView>
                  </graphic>
                  <tooltip>
                     <Tooltip text="Profil" />
                  </tooltip>
               </Button>
               <Button mnemonicParsing="false" onAction="#onOrdersButtonClicked" prefHeight="45.0" prefWidth="45.0" styleClass="orders-button">
                  <graphic>
                     <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@/images/icons/orders.png" />
                     </ImageView>
                  </graphic>
                  <tooltip>
                     <Tooltip text="Commandes" />
                  </tooltip>
               </Button>
            </HBox>
         </right>
         <BorderPane.margin>
            <Insets left="35.0" right="35.0" />
         </BorderPane.margin>
      </BorderPane>
   </top>
   <center>
      <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER">
         <VBox spacing="20.0">
            <padding>
               <Insets bottom="35.0" left="35.0" right="35.0" top="35.0" />
            </padding>
            <TextField fx:id="searchBar" promptText="Recherchez votre bonheur" styleClass="search-bar" VBox.vgrow="ALWAYS" />
            <Label fx:id="bestOffersTitle" styleClass="title" text="Nos meilleures parts" />
            <HBox fx:id="bestOffersContainer" spacing="40.0" fillHeight="false" />
            <Label fx:id="pizzasTitle" styleClass="title" text="Nos pizzas">
               <VBox.margin>
                  <Insets bottom="-25.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="searchTitle" styleClass="title" text="Pizzas trouvées" />
            <HBox alignment="CENTER">
               <padding>
                  <Insets top="15.0" />
               </padding>
               <ProgressIndicator fx:id="searchLoading" scaleX="2" scaleY="2" style="-fx-progress-color: -fx-color-text;" />
            </HBox>
            <GridPane fx:id="pizzasContainer" hgap="35.0" vgap="35.0" />
            <Label fx:id="searchEmpty" styleClass="notice" text="Aucun résultat">
               <VBox.margin>
                  <Insets top="-15.0" left="15" />
               </VBox.margin>
            </Label>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
